<div style="float: right;">
  <div style = "margin-right:20px">
    <%= form_tag admin_categories_path, :method => 'get' do %>
      <div style = "margin-left:15px;">
        <p>
          <%= text_field_tag :search, params[:search], :placeholder => "search categories" %>
        </p>
        </div>
    <% end %>
  </div>
</div>
<div style = "margin-left:50px;">
<table class="table table-striped">
  <tbody>
    <tr>
      <td>
        <% @categories.each do |category|%>
            <ul>
              <li>
                <p>
                  <%= link_to "#{category.name}", admin_category_path(category) %>
                  <%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?',:method => :delete, :class => 'btn btn-mini btn-danger'  %>
                  <%= link_to "Edit", edit_admin_category_path(category), :class => 'btn btn-mini',:remote => true %>
                </p>
              </li>
              <ul>
              <% category.sub_categories.each do |sub_category| %>    
                <li>
                  <p>
                    <%= link_to "#{sub_category.name}", admin_category_path(sub_category)%>
                    <%= link_to 'Destroy', admin_category_path(sub_category), :confirm => 'Are you sure?',:method => :delete, :class => 'btn btn-mini btn-danger'  %>
                    <%= link_to "Edit", edit_admin_category_path(category), :class => 'btn btn-mini',:remote => true %>
                  </p> 
                </li>
              <%end%>
              </ul>
            </ul>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div><br/>
<div style = "margin-left:250px">
  <%= button_to "Add Category", new_admin_category_path, :id => "open-contacts-dialog-btn",
      :class => "inbox-sf-add-btn tip", :method => :get, :class => 'btn btn-primary'  %>
</div>
<div style = "margin-left:50px;">
  <%= will_paginate @categories%>
</div>

<div id = "edit_form"></div>